                <align>left</align>
                <aligny>top</aligny>
                <label>$INFO[Container(120).ListItem.Date]</label>
                <textcolor>white</textcolor>
                <shadowcolor>AA000000</shadowcolor>
            </control>
            <control type="image" id="401">
